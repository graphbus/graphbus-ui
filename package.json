{
  "name": "graphbus-ui",
  "version": "1.0.0",
  "description": "Electron UI for GraphBus agent orchestration with natural language control",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start:dir": "echo 'Usage: npm run start:dir /path/to/directory' && echo 'Or: npm start -- --dir=/path/to/directory'",
    "build": "electron-builder",
    "dev": "electron . --enable-logging"
  },
  "keywords": [
    "graphbus",
    "electron",
    "agents",
    "orchestration",
    "nlp"
  ],
  "author": "GraphBus",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.69.0",
    "python-shell": "^5.0.0"
  },
  "build": {
    "appId": "com.graphbus.ui",
    "productName": "GraphBus UI",
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "python_bridge.js",
      "claude_service.js",
      "index.html",
      "styles.css",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "Development",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "directories": {
      "output": "dist"
    }
  }
}